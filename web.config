<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="dist/index.js" verb="*" modules="iisnode" />
    </handlers>
    
    <rewrite>
      <rules>
        <!-- Serve static files directly -->
        <rule name="Static Files" stopProcessing="true">
          <match url="^(dist/public|uploads|widget\.js|test-widget\.html|feedback-test\.html|widget-test\.html)" />
          <action type="Rewrite" url="{R:0}" />
        </rule>
        
        <!-- API routes -->
        <rule name="API Routes" stopProcessing="true">
          <match url="^api/" />
          <action type="Rewrite" url="dist/index.js" />
        </rule>
        
        <!-- Widget routes -->
        <rule name="Widget Routes" stopProcessing="true">
          <match url="^(widget|test)" />
          <action type="Rewrite" url="dist/index.js" />
        </rule>
        
        <!-- All other routes go to the Node.js app -->
        <rule name="Node.js Routes" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="dist/index.js" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <remove name="X-Powered-By" />
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration> 